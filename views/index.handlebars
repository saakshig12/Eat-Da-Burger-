<h1>Eat Da Burger!</h1>

<h2>Burger Menu</h2>

<ul>
  {{#each burgers}}
    {{#if false}}
    {{else}}
    <li>{{burger_name}}</li>
    {{/if}}
  {{/each}}
</ul>

<h2>Burgers devoured:</h2>

<ul>
  {{#each burgers}}
  {{#if devoured}}
  <li>{{burger_name}}</li>
  {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="burger">Burger Name:</label>
    <input type="text" id="burger" name="name">
  </div>

  <div class="form-group">
    <label for="devoured">Devoured</label><br>
    <input type="radio" name="devoured" value="1" checked> Eaten!<br>
    <input type="radio" name="devoured" value="0"> Edible
  </div>

  <button type="submit">Add Burger</button>

</form>

<form class="delete-form">

  {{#each burgers}}
  <button class="change-devour" data-id="{{id}}">Delete {{name}}</button>
  {{/each}}
</form>